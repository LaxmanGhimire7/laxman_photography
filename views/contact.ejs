<%- include('partials/header', { title: 'Contact - Boundless Moments' }) %>
  <!-- Contact Section -->
  <section class="py-20 text-center text-white">
    <h2 class="text-4xl font-bold mb-6">Contact Us</h2>

    <!-- Contact Form -->
    <div class="max-w-3xl mx-auto mb-12 px-4">
      <h3 class="text-3xl font-semibold mb-4">Get in Touch</h3>
      <p class="text-lg mb-6">Weâ€™d love to hear from you! Whether you're interested in booking a session, have a
        question, or just want to chat, feel free to reach out using the form below.</p>

      <form action="/contact" method="POST" class="space-y-6">
        <div class="flex space-x-4">
          <div class="w-full">
            <label for="name" class="block text-lg">Your Name</label>
            <input type="text" id="name" name="name"
              class="w-full p-4 bg-white text-black rounded-lg shadow-md focus:outline-none focus:ring-2 focus:ring-yellow-500"
              placeholder="Enter your name" required>
          </div>
          <div class="w-full">
            <label for="email" class="block text-lg">Your Email</label>
            <input type="email" id="email" name="email"
              class="w-full p-4 bg-white text-black rounded-lg shadow-md focus:outline-none focus:ring-2 focus:ring-yellow-500"
              placeholder="Enter your email" required>
          </div>
        </div>
        <div>
          <label for="message" class="block text-lg">Your Message</label>
          <textarea id="message" name="message" rows="5"
            class="w-full p-4 bg-white text-black rounded-lg shadow-md focus:outline-none focus:ring-2 focus:ring-yellow-500"
            placeholder="Write your message here..." required></textarea>
        </div>
        <button type="submit"
          class="bg-yellow-500 text-black px-6 py-3 rounded-md font-semibold hover:bg-yellow-600 transition">Send
          Message</button>
      </form>
    </div>
    

    <!-- Contact Details -->
    <div class="max-w-3xl mx-auto mb-12 text-left px-4">
      <h3 class="text-3xl font-semibold mb-4">Contact Information</h3>
      <p class="text-lg mb-4"><strong>Email:</strong> <a href="mailto:timeless@gmail.com"
          class="text-yellow-500 hover:underline">BoundlessMoments@gmail.com</a></p>
      <p class="text-lg mb-4"><strong>Phone:</strong> <a href="tel:+977123456789"
          class="text-yellow-500 hover:underline">+977 1-2345678</a></p>
      <p class="text-lg"><strong>Location:</strong> 123 Photography Lane, Kathmandu, Nepal</p>
    </div>

    <!-- Optional Map Section -->
    <div class="max-w-3xl mx-auto mb-12">
      <h3 class="text-3xl font-semibold mb-4">Find Us</h3>
      <div class="aspect-w-16 aspect-h-9">
        <!-- Embed Google Map (Optional) -->
        <iframe class="w-full h-full rounded-lg shadow-md"
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d14133.117259769557!2d85.31451127677918!3d27.708955529947192!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x39eb1909039cb25f%3A0x0!2zMjfCsDQyJzMyLjMiTiA4NcKwMTgnMjcuMCJF!5e0!3m2!1sen!2snp!4v1700000000000!5m2!1sen!2snp"
