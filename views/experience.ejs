<%- include('partials/header', { title: 'Experience - Boundless Moments' }) %>

<main class="pt-32 pb-16 px-6 md:px-16 bg-cover bg-center bg-fixed" 
      style="background-image: url('https://images.unsplash.com/photo-1502982720700-bfff97f2ecac?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D');">
  <div class="bg-black bg-opacity-60 py-12 px-6 md:px-16 rounded-lg max-w-7xl mx-auto text-white">
    <h2 class="text-4xl font-extrabold text-center mb-16 text-yellow-400">Our Experience & Skills</h2>

    <!-- List of Experience Items -->
    <section class="flex flex-wrap justify-center">
      <% experienceItems.forEach(item => { %>
        <div class="bg-gray-800 bg-opacity-90 shadow-xl rounded-lg mb-12 p-8 max-w-3xl w-full transition-transform transform hover:scale-105 duration-300 mx-4">
          <!-- Center the content inside each experience item -->
          <div class="text-center">
            <h4 class="text-2xl font-bold text-yellow-400 mb-4"><%= item.title %></h4>
            <p class="text-lg text-gray-300 mb-6 leading-relaxed"><%= item.description %></p>

            <h5 class="text-xl font-semibold text-yellow-400 mb-2">Skills:</h5>
            <ul class="list-disc list-inside text-gray-300 mb-6">
              <% item.skills.forEach(skill => { %>
                <li class="leading-relaxed"><%= skill %></li>
              <% }) %>
            </ul>

            <h5 class="text-xl font-semibold text-yellow-400 mb-2">Awards:</h5>
            <ul class="list-disc list-inside text-gray-300">
              <% item.awards.forEach(award => { %>
                <li class="leading-relaxed"><%= award %></li>
              <% }) %>
            </ul>
          </div>
        </div>
      <% }) %>
    </section>
  </div>
</main>

<%- include('partials/footer') %>
